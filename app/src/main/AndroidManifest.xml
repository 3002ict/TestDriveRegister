<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="au.com.jamesfrizelles.testdriveregister">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DriverDetailsActivity"
            android:label="@string/title_activity_driver_details"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AgreementActivity"
            android:label="@string/title_activity_agreement"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".StartDriveActivity"
            android:label="@string/title_activity_start_drive"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".DriveActivity"
            android:label="@string/title_activity_drive"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ReviewActivity"
            android:label="@string/title_activity_result"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>